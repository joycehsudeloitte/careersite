<script>
  // 分頁切換
  document.querySelectorAll('.horizon-program nav a').forEach(link=>{
    link.addEventListener('click', function(){
      document.querySelectorAll('.horizon-program nav a').forEach(a=>a.classList.remove('active'));
      this.classList.add('active');
      document.querySelectorAll('.horizon-program .section').forEach(sec=>sec.classList.remove('active'));
      document.getElementById(this.dataset.target).classList.add('active');
    });
  });
</script>
