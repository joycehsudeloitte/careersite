<script>
  // åˆ†é åˆ‡æ›
  document.querySelectorAll('.horizon-program nav a').forEach(link=>{
    link.addEventListener('click', function(){
      document.querySelectorAll('.horizon-program nav a').forEach(a=>a.classList.remove('active'));
      this.classList.add('active');
      document.querySelectorAll('.horizon-program .section').forEach(sec=>sec.classList.remove('active'));
      document.getElementById(this.dataset.target).classList.add('active');
    });
  });

  // ====== æˆªæ­¢/çµæŸ åˆ¤æ–· ======
  // å°‡ "YYYY/MM/DD HH:MM" è½‰æˆæœ¬åœ°æ™‚é–“çš„ Date
  function parseLocalDateTime(s) {
    if (!s) return NaN;
    const iso = s.trim().replace(/\//g, '-').replace(' ', 'T') + ':00';
    return new Date(iso);
  }

  // å¯¦é«”èªªæ˜æœƒï¼šéäº† data-end å°±æ¨™è¨˜å·²çµæŸ
  function markEndedCard(card){
    if (card.classList.contains('ended')) return;
    card.classList.add('ended');
    card.setAttribute('aria-disabled','true');
    card.setAttribute('tabindex','-1');
    // é›™ä¿éšªé˜»æ­¢é»æ“Š
    card.addEventListener('click', e => e.preventDefault(), {capture:true});
    // å¾½ç« 
    const badge = document.createElement('span');
    badge.className = 'badge-ended';
    badge.textContent = 'å·²çµæŸ';
    card.appendChild(badge);
  }

  (function flagEndedOnsite(){
    const now = new Date();
    document.querySelectorAll('#onsite .card-link[data-end]').forEach(card=>{
      const endStr = card.getAttribute('data-end');
      const endTime = parseLocalDateTime(endStr);
      if (isFinite(endTime) && endTime < now) {
        markEndedCard(card);
      }
    });
  })();

  // ç·šä¸Šèªªæ˜æœƒå ±åæŒ‰éˆ•ï¼šéäº† data-deadline å°±æ”¹ç‚ºå·²æˆªæ­¢
  (function flagClosedOnline(){
    const btn = document.querySelector('#online .btn[data-deadline]');
    if (!btn) return;
    const deadline = parseLocalDateTime(btn.getAttribute('data-deadline'));
    const now = new Date();
    if (isFinite(deadline) && deadline < now){
      btn.classList.add('ended');
      btn.setAttribute('aria-disabled','true');
      btn.setAttribute('tabindex','-1');
      btn.textContent = 'å·²æˆªæ­¢';
      btn.addEventListener('click', e => e.preventDefault(), {capture:true});
    }
  })();
</script>
