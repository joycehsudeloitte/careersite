<style>
  :root{
    --brand:#86BC25; /* 主色 */
    --text:#333;
    --muted:#666;
    --white:#fff;
  }

  .mentor-quotes{
    background: var(--white);
    padding: 48px 16px;
    font-family: "Microsoft JhengHei","Noto Sans TC",sans-serif;
    text-align: center;
  }

  .mq-grid{
    display: grid !important;
    grid-template-columns: 1fr;
    gap: 32px;
    max-width: 1800px;
    margin: 0 auto;
  }

  @media (min-width: 768px){
    .mq-grid{
      grid-template-columns: repeat(3, minmax(0, 1fr)) !important;
      align-items: start;
    }
  }

  .mq-card{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 12px;
  }

  .mq-avatar{
    width: 180px;
    height: 180px;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 16px;
    border: 4px solid var(--brand);
    box-shadow: 0 6px 16px rgba(0,0,0,.08);
  }
  .mq-avatar img{
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .mq-quote{
    font-size: 1.05rem;
    line-height: 1.8;
    color: var(--text);
    font-style: italic;
    margin: 0 0 8px;
    max-width: 90%;
    cursor: pointer; /* 提示可點擊 */
    transition: opacity 1s ease, transform 1s ease;
    will-change: opacity, transform;
  }
  .mq-quote::before{ content:"“"; font-size:1.8rem; color:var(--brand); margin-right:4px; }
  .mq-quote::after{  content:"”"; font-size:1.8rem; color:var(--brand); margin-left:4px; }

  /* 切換時的動畫狀態 */
  .mq-quote.is-swapping-out{
    opacity: 0;
    transform: translateY(6px);
  }
  .mq-quote.is-swapping-in{
    opacity: 1;
    transform: translateY(0);
  }

  /* 尊重使用者的「減少動態」偏好 */
  @media (prefers-reduced-motion: reduce){
    .mq-quote{
      transition: none;
    }
  }

  .mq-name{
    font-weight: 700;
    color: var(--muted);
    font-size: 0.95rem;
    margin: 0;
  }
</style>

<script>
  // 預設語言
  let currentLang = "zh";
  const quotes = Array.from(document.querySelectorAll(".mq-quote"));

  // 封裝：執行一次帶動畫的文字切換
  function swapLanguageWithAnimation(nextLang){
    // 1) 先讓所有引言淡出
    quotes.forEach(q => q.classList.add("is-swapping-out"));
    // 2) 等待淡出完成後再換文字並淡入
    //    這裡用 setTimeout 簡化（與 CSS transition 時間一致：250ms）
    setTimeout(() => {
      quotes.forEach(q => {
        q.textContent = q.dataset[nextLang] || q.textContent;
        // 清除 out 狀態並加上 in 狀態，觸發淡入
        q.classList.remove("is-swapping-out");
        // 先設一個初始透明度（避免瞬間跳動）
        q.style.opacity = 0;
        requestAnimationFrame(() => {
          q.classList.add("is-swapping-in");
          // 移除行內樣式以回到 CSS 控制
          q.style.opacity = "";
        });
        // 在下一幀把 in 狀態移除，讓元素回歸常態（但保留已生效的最終樣式）
        setTimeout(() => q.classList.remove("is-swapping-in"), 260);
      });
    }, 250);
  }

  // 點擊任一引言 => 全部卡片一起切換
  quotes.forEach(el => {
    el.addEventListener("click", () => {
      const next = (currentLang === "zh") ? "ja" : "zh";
      swapLanguageWithAnimation(next);
      currentLang = next;
    });
  });
</script>
