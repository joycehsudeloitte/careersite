<script>
  // ÂàÜÈ†ÅÂàáÊèõÔºöÂ∞çÊáâ about / process / onsite
  document.querySelectorAll('.seeds-program nav a').forEach(link=>{
    link.addEventListener('click', function(){
      document.querySelectorAll('.seeds-program nav a').forEach(a=>a.classList.remove('active'));
      this.classList.add('active');
      document.querySelectorAll('.seeds-program .section').forEach(sec=>sec.classList.remove('active'));
      var target = document.getElementById(this.dataset.target);
      if(target){ target.classList.add('active'); }
    });
  });
</script>
