  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const track = document.querySelector(".campaign-carousel-track");
      const items = document.querySelectorAll(".campaign-carousel-item");
      const prevBtn = document.querySelector(".carousel-btn.prev");
      const nextBtn = document.querySelector(".carousel-btn.next");
      const dotsWrap = document.querySelector(".campaign-carousel-dots");

      let index = 0;
      const gap = 24;
      const total = items.length;

      function getItemWidth() {
        if (!items.length) return 0;
        return items[0].offsetWidth + gap;
      }

      function buildDots() {
        if (!dotsWrap) return;
        dotsWrap.innerHTML = "";
        for (let i = 0; i < total; i++) {
          const btn = document.createElement("button");
          btn.type = "button";
          btn.className = "campaign-dot" + (i === 0 ? " is-active" : "");
          btn.setAttribute("aria-label", `Go to slide ${i + 1}`);
          btn.addEventListener("click", function () {
            index = i;
            updateCarousel();
          });
          dotsWrap.appendChild(btn);
        }
      }

      function updateDots() {
        const dots = dotsWrap ? dotsWrap.querySelectorAll(".campaign-dot") : [];
        dots.forEach((d, i) => {
          d.classList.toggle("is-active", i === index);
        });
      }

      function updateCarousel() {
        const itemWidth = getItemWidth();
        track.style.transform = `translateX(-${index * itemWidth}px)`;
        updateDots();
      }

      function next() {
        index = (index + 1) % total;
        updateCarousel();
      }

      function prev() {
        index = (index - 1 + total) % total;
        updateCarousel();
      }

      nextBtn.addEventListener("click", next);
      prevBtn.addEventListener("click", prev);

      buildDots();
      updateCarousel();

      window.addEventListener("resize", function () {
        updateCarousel();
      });
    });
  </script>

</section>
